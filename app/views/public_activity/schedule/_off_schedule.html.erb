<% if activity.read %>
  <%= link_to t(".message", schedule: activity.trackable.name), "javascript:void(0)",
    data_href: admin_products_path, data_id: activity.id, class: "message" %>
<% else %>
  <%= link_to t(".message", schedule: activity.trackable.name), "javascript:void(0)",
    data_href: admin_products_path, data_id: activity.id, class: "message bg-success" %>
<% end %>
