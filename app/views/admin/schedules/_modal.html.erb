<div class="modal fade" id="modal-<%= modal.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title" id="exampleModalLabel"><%= t ".detail_schedule" %></span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <section class="order_details">
          <div class="container">
            <div class="row order_d_inner">
              <div class="col-lg-6">
                <div class="details_item">
                  <h4><%= t ".schedule_info" %></h4>
                  <ul class="list">
                    <li><a href="#"><span><%= t ".name" %></span> : <%= modal.name %></a></li>
                    <li><a href="#"><span><%= t ".discount" %></span> : <%= modal.discount %></a></li>
                  </ul>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="details_item">
                  <h4><%= t ".time" %></h4>
                  <ul class="list">
                    <li><a href="#"><span><%= t ".start_time" %></span> : <%= l modal.start_time %></a></li>
                    <li><a href="#"><span><%= t ".end_time" %></span> : <%= l modal.end_time %></a></li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="order_details_table">
              <h2><%= t ".product_schedule" %></h2>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col"><%= t ".product" %></th>
                      <th scope="col"><%= t ".price" %></th>
                      <th scope="col"><%= t ".priced_discount" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% modal.product_schedules.each do |p| %>
                      <tr>
                        <td><p><%= p.product_name %></p></td>
                        <td><p><%= number_to_currency p.product_price %></p></td>
                        <td>
                          <p><%= number_to_currency price_discounted(p.product_price, modal.discount) %></p>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
