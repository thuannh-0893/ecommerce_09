<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="col-lg-12 form-group">
    <%= f.text_field :name, class: "form-control", placeholder: :name %>
  </div>
  <div class="col-md-12 form-group">
    <%= f.email_field :email, class: "form-control", placeholder: :email %>
  </div>
  <div class="col-md-12 form-group">
    <%= f.telephone_field :phone, class: "form-control", placeholder: :phone %>
  </div>
  <div class="col-md-12 form-group">
    <%= f.text_field :address, class: "form-control", placeholder: :address %>
  </div>
  <div class="col-md-12 form-group">
    <%= image_tag @user.avatar_url, class: "p_image" %>
    <%= f.file_field :avatar, class: "form-control", accept: Settings.accept_image %>
  </div>
  <div class="col-md-12 form-group">
    <%= f.password_field :password, class: "form-control", placeholder: :password %>
  </div>
  <div class="col-md-12 form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: :password_confirmation %>
  </div>
  <div class="col-md-12 form-group">
    <%= f.submit yield(:button_text), class: "primary-btn" %>
  </div>
<% end %>
