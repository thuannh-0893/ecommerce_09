<div class="modal fade" id="modal-scheduler" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title" id="exampleModalLabel"><%= t ".scheduler_title" %></span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <section class="order_details">
          <div class="container">
            <div class="row order_d_inner">
                <%= form_for(Schedule.new, url: admin_schedules_path) do |f| %>
                  <%= render "shared/error_messages", object: f.object %>
                  <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control" %>
                  <%= f.label :start_time %>
                  <%= f.datetime_local_field :start_time, min: Time.now, class: "form-control" %>
                  <%= f.label :end_time %>
                  <%= f.datetime_local_field :end_time, min: Time.now, class: "form-control" %>
                  <%= f.label :discount %>
                  <%= f.number_field :discount, min: 0, max: 100, class: "form-control" %>
                  <%= f.label :product %>
                  <%= hidden_field_tag :product_ids, "" %>
                  <div id="product_in_schedule"></div>
                  <%= f.submit t(".add"), class: "btn btn-primary submit-schedule" %>
                <% end %>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
