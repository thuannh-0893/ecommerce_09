<% provide :title, t(".title") %>
<section class="section_gap_bottom">
  <div class="main-content">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
      <ul class="breadcrumb">
        <li>
          <i class="ace-icon fa fa-home home-icon"></i>
          <%= link_to t(".home"), admin_path %>
        </li>
        <li class="active"><%= t ".title" %></li>
      </ul>
      <!-- /.breadcrumb -->
    </div>
    <div class="main-content-inner container">
      <div class="page-content">
        <div class="page-header">
          <h1><%= t ".title" %></h1>
          <hr>
        </div>
        <!-- /.page-header -->
        <div class="row">
          <div class="col-sm-12">
            <%= search_form_for [:admin, @search], class: "form-inline" do |f| %>
              <div class="form-group">
                <%= f.collection_select :category_id_eq, @sub_categories, :id, :name, {prompt: true}, {class: "form-control"} %>
                <%= f.text_field :name_cont, placeholder: t(".name"), class: "form-control" %>
              </div>
              <%= f.submit t(".search"), class: "btn btn-infoear" %>
            <% end %>

          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <%= form_tag import_admin_products_path, multipart: true do %>
              <%= submit_tag t(".import"), class: "btn btn-info" %>
              <%= file_field_tag :file %>
            <% end %>
          </div>
          <div class="col-sm-6 export">
            <%= link_to t(".exportCSV"), admin_products_path(format: "csv"), class: "btn btn-info" %>
            <%= link_to t(".exportExcel"), admin_products_path(format: "xls"), class: "btn btn-info" %>
            <%= link_to t(".exportCSV_template"), admin_products_path(format: "csv", template: true), class: "btn btn-info" %>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modal-scheduler" id="schedule">
                <%= t ".scheduler" %>
              </button>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <h5>
              <%= link_to(new_admin_product_path) do %>
                <span class="fas fa-plus"><%= t ".new" %></span>
              <% end %>
            </h5>
            <!-- div.dataTables_borderWrap -->
            <div>
              <% if @products.any? %>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th><input type="checkbox" id="checkAll" name="checkAll"></th>
                      <th>ID</th>
                      <th><%= sort_link(@search, :name, t(".name")) %></th>
                      <th><%= t ".picture" %></th>
                      <th><%= sort_link(@search, :price, t(".price")) %></th>
                      <th><%= sort_link(@search, :quantity, t(".quantity")) %></th>
                      <th><%= sort_link(@search, :discount, t(".discount")) %></th>
                      <th><%= sort_link(@search, :category, t(".category")) %></th>
                      <th><%= sort_link(@search, :created_at, t(".created_at")) %></th>
                      <th><%= sort_link(@search, :updated_at, t(".updated_at")) %></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @products %>
                  </tbody>
                </table>
              <% else %>
                Chưa có sản phẩm
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /.page-content -->
      <%= paginate @products %>
    </div>
  </div>
  <%= render "admin/products/modal" %>
  <!-- /.main-content -->
</section>
<%= javascript_include_tag "checkbox" %>
