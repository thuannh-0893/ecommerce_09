<tr>
  <td><input type="checkbox" class="checkbox" value="<%= product.id %>" name="<%= product.name %>"></td>
  <td><%= product_counter + 1 %></td>
  <td><%= link_to product.name, product, target: "_blank"%></td>
  <% if product.item_photos.first %>
    <% photo_url = product.item_photos.first.photo_url %>
  <% else %>
    <% photo_url = "/assets/fallback/default.jpg" %>
  <% end %>
  <td><%= image_tag photo_url, class: "table-img" %></td>
  <td><%= number_to_currency(product.price) %></td>
  <td><%= product.quantity %></td>
  <td><%= product.discount %></td>
  <td><%= product.category.name %></td>
  <td><%= l product.created_at %></td>
  <td><%= l product.updated_at %></td>
  <td>
    <%= link_to edit_admin_product_path(product) do %>
      <span class="far fa-edit"></span> <%= t ".edit" %>
    <% end %>
    <%= link_to(admin_product_path(product), method: :delete, data: { confirm: t(".confirm") }) do %>
      <span class="far fa-trash-alt"></span> <%= t ".delete" %>
    <% end %>
  </td>
</tr>
